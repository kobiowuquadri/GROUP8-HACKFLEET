# Server Configuration
PORT=5000
HOST_NAME=localhost
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/nodegoat
MONGO_USER=your_mongo_username
MONGO_PASS=your_mongo_password
MONGO_SSL=true
MONGO_SSL_CA=./artifacts/cert/mongodb.pem

# Security Configuration
COOKIE_SECRET=your_secure_cookie_secret
CRYPTO_KEY=your_secure_crypto_key
SESSION_SECRET=your_secure_session_secret
SESSION_DOMAIN=.yourdomain.com
SESSION_MAX_AGE=86400000
SESSION_IDLE_TIMEOUT=1800000

# SSL Configuration
SSL_KEY_PATH=./artifacts/cert/server.key
SSL_CERT_PATH=./artifacts/cert/server.crt
SSL_MIN_VERSION=TLSv1.2
SSL_CIPHERS=ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=3600000
AUTH_RATE_LIMIT_MAX=5

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true 